# Development Environment Variables
# This file is used when running the dev container

# Flask Configuration
FLASK_ENV=development
FLASK_APP=main.py
DEBUG=True
TESTING=False

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=lms_user
DB_PASSWORD=lms_user_pass
DB_NAME=lms_db

# Security Keys
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Email Configuration (Mock SMTP for development)
MAIL_SERVER=localhost
MAIL_PORT=25
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=False
MAIL_USE_SSL=False

# AWS S3 Configuration (Optional - use local storage in dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Stripe Configuration (Optional - use test keys)
STRIPE_API_KEY=sk_test_your_test_key_here

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/workspace/logs/app.log

# CORS Configuration
CORS_ORIGINS=*
